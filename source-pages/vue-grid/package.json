{
  "name": "vue-grid-app",
  "version": "1.0.0",
  "description": "Vue.js application with lazy-loaded grid for Playwright scraping exercises",
  "scripts": {
    "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "tsx watch server/index.ts",
    "build": "yarn build:frontend && yarn build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc -p server/tsconfig.json",
    "preview": "vite preview --port 8000 --host 0.0.0.0",
    "start": "node server/dist/index.js"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "tsx": "^4.7.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2"
  }
}

